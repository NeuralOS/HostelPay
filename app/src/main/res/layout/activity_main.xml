    <ImageView
        android:id="@+id/applogor"
        android:layout_width="157dp"
        android:layout_height="107dp"
        android:layout_marginTop="120dp"
        android:layout_marginStart="10dp"
        android:layout_x="15dp"
        android:layout_y="285dp"
